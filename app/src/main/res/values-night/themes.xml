<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimplyWords" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandColorGreen</item>
        <item name="colorPrimaryVariant">@color/brandColorGreen</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryBrandGreen</item>
        <item name="colorSecondaryVariant">@color/secondaryBrandGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.SimplyWords" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>



    <style name="CardBackground"><item name="android:backgroundTint">@color/secondaryBrandGreen</item></style>

    <style name="HeaderText">
        <item name="android:textColor">@color/lightBeige</item>
        <item name="android:textSize">31dp</item>
    </style>
    <style name="HeaderTextContrasted">
        <item name="android:textColor">@color/lightBeige</item>
        <item name="android:textSize">31dp</item>
    </style>

    <style name="LabelText">
        <item name="android:textColor">@color/lightBeige</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="LabelTextContrasted">
        <item name="android:textColor">@color/lightBeige</item>
        <item name="android:textSize">17dp</item>
    </style>


    <style name="descriptionText">
        <item name="android:textColor">@color/lightBeige</item>
        <item name="android:textSize">11dp</item>
    </style>
    <style name="descriptionTextContrasted">
        <item name="android:textColor">@color/lightBeige</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/secondaryBrandGreen</item>
    </style>
    <style name="IconColor"><item name="android:tint">@color/secondaryBrandGreen</item></style>

</resources>