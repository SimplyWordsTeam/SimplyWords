<resources xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- Base application theme. -->
    <style name="Theme.SimplyWords" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandColorGreen</item>
        <item name="colorPrimaryVariant">@color/brandColorGreen</item>
        <item name="colorOnPrimary">@color/offWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryBrandGreen</item>
        <item name="colorSecondaryVariant">@color/secondaryBrandGreen</item>
        <item name="colorOnSecondary">@color/offWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brandColorGreen</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.SimplyWords" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Transparent" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>




    <style name="CardBackground"><item name="android:backgroundTint">@color/lightBeige</item></style>

    <style name="HeaderText">
        <item name="android:textColor">@color/brandColorGreen</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="HeaderTextContrasted">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="LabelText">
        <item name="android:textColor">@color/brandColorGreen</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="LabelTextContrasted">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
    </style>


    <style name="descriptionText">
        <item name="android:textColor">@color/greywhite</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="descriptionTextContrasted">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/secondaryBrandGreen</item>
    </style>
    <style name="IconColor"><item name="android:tint">@color/secondaryBrandGreen</item></style>

    <style name="TextInput">
        <item name="android:tint">@color/lightBeige</item>
<!--        <item name="android:padding">10dp</item>-->
    </style>



</resources>