<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="Theme.SimplyWords" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/offWhite</item>
        <item name="colorSecondary">@color/lightGreen</item>
        <item name="colorSecondaryVariant">@color/lightGreen</item>
        <item name="colorOnSecondary">@color/offWhite</item>
        <item name="android:statusBarColor">@color/darkGreen</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="cardBackground">
        <item name="android:backgroundTint">@color/beige</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="headerTextContrasted">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="labelText">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="labelTextContrasted">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="descriptionText">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="descriptionTextContrasted">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="navigationBarActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:backgroundTint">@color/lightGreen</item>
    </style>

    <style name="navigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/lightGreen</item>
    </style>

    <style name="iconColor">
        <item name="android:tint">@color/lightGreen</item>
    </style>

    <style name="textInput">
        <item name="android:tint">@color/beige</item>
    </style>
</resources>