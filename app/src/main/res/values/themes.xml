<resources>

    <style name="Theme.SimplyWords" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorBeige">#5e6300</item>
        <item name="colorOnBeige">#ffffff</item>
        <item name="colorBeigeContainer">#e3ea73</item>
        <item name="colorOnBeigeContainer">#1b1d00</item>
        <item name="harmonizeBeige">true</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SimplyWords.Lexend" parent="@style/Theme.SimplyWords">
        <item name="fontFamily">@font/lexend</item>
    </style>
    <style name="Theme.SimplyWords.Roboto" parent="@style/Theme.SimplyWords">
        <item name="fontFamily">@font/lexend</item>
    </style>
    <style name="Theme.SimplyWords.Tinos" parent="@style/Theme.SimplyWords">
        <item name="fontFamily">@font/tinos</item>
    </style>


    <style name="Theme.Transparent" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="cardBackground">
        <item name="android:backgroundTint">@color/beige</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="headerTextContrasted">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="labelText">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="labelTextContrasted">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="descriptionText">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="descriptionTextContrasted">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="navigationBarActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:backgroundTint">@color/lightGreen</item>
    </style>

    <style name="navigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/lightGreen</item>
    </style>

    <style name="iconColor">
        <item name="android:tint">@color/lightGreen</item>
    </style>

    <style name="textInput">
        <item name="android:tint">@color/beige</item>
    </style>

    <style name="Theme.SimplyWords.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SimplyWords.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SimplyWords.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>